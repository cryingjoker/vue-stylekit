    transition-duration 1s
    transition-property top, right, transform, width, height
    @media (max-width: 767px)
      background-image: none
    .vip-iphone--step-2 &
      transform: rotate(-34deg)
      top: -200%
      right: -90%
      width: 220%
    .vip-iphone--step-3 &
      transform: rotate(-75deg)
      top: -203%
      right: -20%
      width: 220%
    .vip-iphone--step-4 &
