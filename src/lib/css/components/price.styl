.{newAppName}-price
  color main-color07
  font-weight 400
  white-space nowrap
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, color

  .color-orange &
    color b2c-orange

  .color-white &
    color b2c-white

  &.rt-price-game
    display inline-block

    &+&
      padding-left 55px
      position relative

      &:before
        content url("data:image/svg+xml;base64,")
        display block
        width 42px
        height 81px
        position absolute
        top -10px
        bottom 0
        left 0

  .{newAppName}-dark-theme &
    color b2c-white07

    .color-orange &
      color b2c-orange

    .color-white &
      color b2c-white

  .{newAppName}-card &
    color inherit

  .{newAppName}-card--has-white-color &
    color white
    opacity .9

  &__opinion
    display inline-block
    font-size 24px
    line-height 31px
    vertical-align baseline

    @media (max-width: mobile-upper-limit)
      font-size 16px

  &__old-value
    display inline-block
    font-size 24px
    line-height 31px
    margin-right 10px
    opacity .7
    position relative
    vertical-align baseline

    @media (max-width: mobile-upper-limit)
      font-size 16px

    &:before
      content ""
      display inline-block
      width 100%
      height 1px
      border-bottom 1px solid main-color
      margin-top auto
      margin-bottom auto
      position absolute
      top 0
      bottom 0
      transition-timing-function ease-in-out
      transition-duration .4s
      transition-property background

      .{newAppName}-dark-theme &
        background-color b2c-white07

      .{newAppName}-card &
        background-color main-color07

      //.{newAppName}-card--has-white-color &
      //  background-color b2c-white07

  &__option-value
    display inline-block
    color main-color09
    font-size 50px
    line-height 45px
    font-weight 400
    padding-left 5px
    padding-right 5px
    vertical-align baseline

    .color-orange &
      color b2c-orange

    .color-white &
      color b2c-white

    .rt-price-game &
      padding-left 0

    .{newAppName}-price-game &
      font-size 68px
      font-weight 100

    .{newAppName}-dark-theme &
      color b2c-white06

    .{newAppName}-dark-theme .color-orange &
      color b2c-orange

    .{newAppName}-dark-theme .color-white &
      color b2c-white

    @media (max-width: mobile-upper-limit)
      font-size 42px

  &__value
    display inline-block
    height 42px
    //color main-color09
    font-size 54px
    line-height 47px
    font-weight 400
    //padding-left 5px
    padding-right 5px
    vertical-align baseline
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property color

    @media (max-width: mobile-upper-limit)
      font-size 42px

    .{newAppName}-price-without-space &
      margin-top 0

    .{newAppName}-dark-theme &
      color b2c-white07

      .color-orange &
        color b2c-orange

      .color-white &
        color b2c-white

    //.{newAppName}-card &
    //  color main-color09

    //.{newAppName}-card--has-white-color &
    //  color b2c-white07

.{newAppName}-price__info
  font-size 14px
  text-align center
  vertical-align baseline
  color inherit
  .color-orange &
    color b2c-orange

  .rt-price-game &
    display block
    font-size 16px
    text-align left
    padding-top 3px

  @media (max-width: mobile-upper-limit)
    line-height 19px

  &--bold-font
    font-weight 500

.{newAppName}-price__info
  display inline-block

.{newAppName}-price__info-item
  .rt-price-game &
    display inline-block
    font-weight 200

  @media (max-width: mobile-upper-limit)
    line-height 19px

  & + &
    border-top 1px solid main-color07
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property border

    .{newAppName}-card--has-white-color &
      border-top-color white

    .{newAppName}-dark-theme &
      border-color b2c-white07

    .{newAppName}-card &
      border-color main-color07

    .{newAppName}-card--has-white-color &
      border-color b2c-white07

.{b2bAppName}-price
  &__value,
  &__info
    font-size 36px
    line-height 40px
    font-weight 500
    height 40px
    @media (max-width tablet-upper-limit)
      font-size 32px
      line-height 32px
      height 32px
    &-item
      display inline-block
      font-size inherit

      &+&
        font-size 18px
        line-height 26px
        margin-left 10px
    &-interval
      margin-top -5px

  //&__value
  //  padding 0 5px

  &__old-value
    color b2c-red
    font-size 18px
    line-height 26px
    padding 0 5px

    &.{newAppName}-price__old-value
      opacity 1

      &:before
        border-bottom none
        border-top 1px solid b2c-red

    .{b2bAppName}-price__info-item
      margin-left 5px
      color b2c-red
  &--darkened
    .{b2bAppName}-price
      &__value,
      &__info
        font-size inherit

  .{newAppName}-price__opinion
    font-size 18px
    line-height 26px
    margin-right 5px

.{newAppName}-price-game
  .{newAppName}-price__info-item
    display inline-block
    border-top 0

  .{newAppName}-price__info-item+.{newAppName}-price__info-item
    &:before
      content "/"
