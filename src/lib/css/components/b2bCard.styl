.{b2bAppName}-card
  min-height 184px
  box-sizing border-box
  overflow unset
  color main-color
  background-color b2c-white
  background-repeat no-repeat
  border-radius 10px
  padding 20px
  z-index 1

  &--package
    padding vertical-space * 1.5
    @media (max-width: mobile-upper-limit)
      padding vertical-space

  &__subtitle
    height 18px
    box-sizing unset
    font-size 14px
    text-transform uppercase
    opacity .25
    letter-spacing .9px

  &__description
    margin-bottom 60px
    vertical-align middle

    &__item
      vertical-align middle

      &+&
        margin-bottom 12px

      &__footnote
        color main-color05

      &--disabled
        opacity .25

      &--purple
        color b2c-purple

    &__row
      margin-bottom vertical-space * .5

  .{b2bAppName}-price
    display inline-block

    &__value,
    &__info
      color inherit
      //font-size inherit

  &__cost
    .{b2bAppName}-price
      &__value,
      &__info
        font-size 36px
        line-height 40px
        @media (max-width: tablet-upper-limit)
          font-size 32px
          line-height 32px

  &__section
    padding 20px 0

    &+&
      border-top 1px solid main-color02

    .{b2bAppName}-card__description__row:last-child
      margin-bottom 0

  &__links-block
    display inline-block
    max-width calc(100% - 42px)
    max-height 26px
    overflow hidden
    vertical-align middle

    &--expanded
      max-height none
      max-width none!important

      & + .rtb-card__expand-button
        display none

      .{b2bAppName}-card__social-link
        &:nth-child(5+n)
          display inline-block

    &__footnote
      margin-top 5px

  &__social-link
    margin-bottom 9px
    width 26px
    height 26px
    display inline-block
    vertical-align middle
    margin-right 6px

    //&:nth-child(6n)
    //  margin-left 0

    &--hidden
      display none

  &__expand-button
    color b2c-purple
    font-size 14px
    line-height 28px
    //margin-left 5px
    vertical-align middle
    cursor pointer
    min-width 41px

  .{newAppName}-card__content
    min-height auto
    padding 0

  .{newAppName}-card__body
    padding 0

  &__discount
    width 100%
    height 10px
    position absolute
    top 0
    left 0
    z-index 2

    &-line
      height 30px
      border-radius 10px 10px 0 0
      position absolute

      &__flag
        width 30px
        height 29px
        position absolute
        top 30px
        right 0
        z-index -1

        &-text
          width 100%
          color b2c-white
          font-size 16px
          line-height 30px
          text-align center
          display: inline-block
          position relative
          z-index 1

        &-text-2
          top 5px

  &__discount-line-1
    width 90%
    background-color b2c-green
    top -30px
    left 5%
    &:after
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-color rgba(main-color, .15)
      border-radius 10px 10px 0 0

    &:last-child
      background-color b2c-yellow-high

  &__discount-line-2
    width 81%
    background-color b2c-red
    top -40px
    left 9.5%
    z-index -1

  &__discount-line-3
    width 72.9%
    background-color b2c-purple
    top -50px
    left 13.95%
    z-index -2

  .{newAppName}-card__background
    top 0
    bottom 0
    left 0
    right 0

  .{newAppName}-card__header,
  .{newAppName}-card__footer
    padding 0

  &__vertical
    display flex
    flex-direction row

    &__left-column
      max-width 64px
      text-align center
      margin-right 20px

  &__icon
    max-width 64px
    max-height 64px

  &--category
    height auto

    .{newAppName}-card__background--position-background-right
      background-position-x 100%

  &__label
    width 80px
    height 49px
    box-sizing border-box
    color b2c-white
    text-align center
    background-repeat no-repeat
    padding-top 4px
    position absolute
    top 20px
    right -13px
    z-index 3
    &-content
      position relative
      top 0
      width 100%
      line-height 32px
    &-hover
      display:none
    &-text
      white-space nowrap
      position absolute
      right 12px
      top 0
      padding-left 10px
      &>*
        line-height 32px

  &__product-image,
  &__product-icon
    position: relative
    height 180px
    top 0
    left 0
    right 0
    bottom 0
    background-size cover
    border-radius 0
    & + .rt-card__content
      padding-top: 20px
      min-height auto
  &__product-icon
    background-size 80px
    background-position 20px 100%
  &--product
    height 580px
    display block
    @media (max-width: tablet-upper-limit)
      height 510px
    @media (max-width: mobile-upper-limit)
      min-height 400px
      height auto
    .{newAppName}-card__content
      height 400px
      @media (max-width: tablet-upper-limit)
        min-height 330px
        height auto
    .color-block
      color b2c-white
    .color-block--white
      color main-color
  &--double-sided
    perspective 2000px
    transform-style: flat
    transition transform 1s, right 1s
    backface-visibility visible
    @media(max-width: mobile-upper-limit)
      min-height 338px
    .{newAppName}-card__background
      &:after
        position absolute
        top 20px
        left 20px
        right 20px
        bottom 20px
        content ''
        background linear-gradient(rgba(main-color, 0) 0%,rgba(main-color, .67) 50%, main-color 100%)
    .{newAppName}-card__content
      height 100%
      padding-top: 310px
      padding-right 55px
      box-sizing border-box
      position absolute
      top 0
      left 0
      visibility visible
      z-index 2
      transition visibility 0s .3s cubic-bezier(0, 1, 1, 0)
      background-size: cover
      background-position: 50% 50%
      &:after
        position absolute
        content: ''
        top 0
        left 0
        rigth 0
        bottom 0
        background linear-gradient(to bottom, rgba(main-color,0) 0%, rgba(main-color, .67) 50%, main-color 100%)
        width 100%
        height 100%
        z-index -1
      @media (max-width: tablet-upper-limit)
        max-height none
        padding-top 100px
      @media (max-width: mobile-upper-limit)
        padding-right 0
        padding-top 50px
    .{newAppName}-card__background
      visibility visible
      transition visibility 0s .3s cubic-bezier(0, 1, 1, 0)
    &.is-flipped
      @media (min-width: laptop-lower-limit)
        transform rotateY(180deg)

  &:hover &__label-hover
    display block

  &__reverse
    position absolute
    transform: rotateY(180deg)
    background-color b2c-white
    padding 40px 40px 20px
    visibility hidden
    transition visibility 0s .3s cubic-bezier(0, 1, 1, 0)
    backface-visibility visible
    @media (max-width: tablet-upper-limit)
      padding 20px
    @media (max-width: mobile-upper-limit)
      padding-top: 40px
    .{newAppName}-font-bold
      &:nth-child(n+2)
        margin-top vertical-space

  &-close
    top 20px
    right 20px
    position absolute
    cursor pointer
    @media (max-width: tablet-upper-limit)
      display none

.is-flipped
  @media (min-width: laptop-lower-limit)
    .{b2bAppName}-card__reverse
      z-index 3
      visibility visible
    .{newAppName}-card__content
      visibility hidden

.{b2bAppName}-product__triangle
  position absolute
  top 1px
  left 0
  right 0
  transform translateY(-97%)
  &-image
    display block

.{b2bAppName}-category
  height 364px
  box-sizing border-box

  @media (max-width: mobile-upper-limit)
    height 420px

  &__content
    display flex
    flex-direction row
    height 100%
    @media (max-width: mobile-upper-limit)
      flex 1 0 100%

    &-top
      overflow hidden

  &__triangle
    width 76px
    height 100%
    position absolute
    top 0
    bottom 0
    left calc(((100% - 77px) / 2))
    right calc(((100% - 74px) / 2))

    @media (max-width: tablet-upper-limit)
      display none

  &__image
    width calc(((100% + 76px) / 2))
    background-position 50% 50%
    background-size cover
    background-repeat no-repeat

    @media (max-width: tablet-upper-limit)
      display none

  &__text-content
    display flex
    flex-direction column
    justify-content space-between
    width calc(((100% - 76px) / 2))
    padding vertical-space
    min-height 364px

    @media (max-width: tablet-upper-limit)
      width 100%
      padding-top vertical-space * 2
    @media (max-width: mobile-upper-limit)
      flex 1 0 100%

  &__mobile-header
    width 60px
    height 60px
    background-position 50% 50%
    background-repeat no-repeat
    margin-bottom vertical-space

    @media (min-width: desktop-lower-limit)
      display none

  &--large
    @media (max-width: mobile-upper-limit)
      height auto
      min-height 420px

    .{b2bAppName}-category__image
      display block !important

      @media (max-width: mobile-upper-limit)
        width 100%
        height 168px
        background-size cover

    .{b2bAppName}-category__text-content
      padding vertical-space * 1.5

      @media (max-width: tablet-upper-limit)
        width calc(((100% - 76px) / 2))

      @media (max-width: mobile-upper-limit)
        width 100%
        height auto

    .{b2bAppName}-category__content
      @media (max-width: mobile-upper-limit)
        flex-direction column-reverse

    .{b2bAppName}-category__text-content
      @media (max-width: tablet-upper-limit)
        padding vertical-space

    .{b2bAppName}-category__triangle
      @media (min-width: tablet-lower-limit)
        display block

  &--medium
    .{b2bAppName}-category__mobile-header
      @media (min-width: laptop-lower-limit)
        display none

  &--small
    .{b2bAppName}-category__text-content
      width 100%
      padding-top vertical-space * 2

    .{b2bAppName}-category__mobile-header
      display block !important

    .{b2bAppName}-category__content-top--cut
      max-height 258px
  &__title
    @media (max-width: tablet-upper-limit)
      font-size 18px
      line-height 26px

  .{newAppName}-price
    opacity 1 !important

.triple
  .{b2bAppName}-card
    &__discount-line-1
      background-color b2c-light-blue-high

    &__discount-line-2
