.{b2bAppName}-card
  min-height 184px
  box-sizing border-box
  overflow unset
  color main-color
  background-color b2c-white
  background-repeat no-repeat
  border-radius 10px
  padding 20px
  z-index 1

  &--package
    padding vertical-space * 1.5
    @media (max-width: mobile-upper-limit)
      padding vertical-space

  &__subtitle
    height 18px
    box-sizing unset
    font-size 14px
    text-transform uppercase
    opacity .25
    letter-spacing .9px

  &__description
    margin-bottom 60px
    vertical-align middle

    &__item
      vertical-align middle

      &+&
        margin-bottom 12px

      &__footnote
        color main-color05

      &--disabled
        opacity .25

      &--purple
        color b2c-purple

    &__row
      margin-bottom vertical-space * .5

  .{b2bAppName}-price
    display inline-block

    &__value,
    &__info
      color inherit
      font-size inherit

  &__cost
    //color main-color09
    //margin-bottom vertical-space * .25

    .{b2bAppName}-price
      &__value,
      &__info
        font-size 32px
        line-height 42px

  &__section
    padding 20px 0

    &+&
      border-top 1px solid main-color02

    .{b2bAppName}-card__description__row:last-child
      margin-bottom 0

  &__links-block
    display inline-block
    max-width 175px
    max-height 26px
    overflow hidden
    vertical-align middle
    margin-right 5px

    &--expanded
      max-height none

      & + .rtb-card__expand-button
        display none

      .{b2bAppName}-card__social-link
        &:nth-child(5+n)
          display inline-block

    &__footnote
      margin-top 5px

  &__social-link
    margin-bottom 6px
    size(26px)
    display inline-block
    vertical-align middle

    &+&
      margin-left 6px

    &:nth-child(6n)
      margin-left 0

    &:nth-child(5+n)
      display none

  &__expand-button
    color b2c-purple
    font-size 14px
    line-height 28px
    margin-left 5px
    vertical-align middle
    cursor pointer

  .{newAppName}-card__content
    min-height auto
    padding 0

  .{newAppName}-card__body
    padding 0

  &__discount
    width 100%
    height 10px
    position absolute
    top 0
    left 0
    z-index 2

    &-line
      height 10px
      border-radius 10px 10px 0 0
      position absolute

      &__flag
        width 83px
        height 80px
        position absolute
        top 10px
        right 0

        &-text
          max-width 73px
          color b2c-white
          font-size 14px
          line-height 16px
          text-align center
          position absolute
          top vertical-space * (3 / 4)
          right vertical-space * .25
        &-text-2
          top 5px

  &__discount-line-1
    width 90%
    background-color b2c-green
    top -10px
    left 5%

    &:last-child
      background-color b2c-yellow-high

  &__discount-line-2
    width 81%
    background-color b2c-red
    top -20px
    left 9.5%

  &__discount-line-3
    width 72.9%
    background-color b2c-purple
    top -30px
    left 13.95%

  .{newAppName}-card__background
    top 0
    bottom 0
    left 0
    right 0

  .{newAppName}-card__header,
  .{newAppName}-card__footer
    padding 0

  &__vertical
    display flex
    flex-direction row

    &__left-column
      max-width 64px
      text-align center
      margin-right 20px

  &__icon
    max-width 64px
    max-height 64px

  &--category
    height 364px

    .{newAppName}-card__background--position-background-right
      background-position-x 100%

  &__label
    width 80px
    height 49px
    box-sizing border-box
    color b2c-white
    text-align center
    background-image url("/static/images/B2B/sale-label.svg")
    background-repeat no-repeat
    padding-top 4px
    position absolute
    top 20px
    right -13px
    z-index 3

  &__product-image
      position: relative
      height 180px
      top 0
      left 0
      right 0
      bottom 0
      background-size cover
      border-radius 0
      & + .rt-card__content
        padding-top: 20px
        min-height auto
  &--product
    height 580px
    display block
    @media (max-width: tablet-upper-limit)
      height 510px
    .{newAppName}-card__content
      height 400px
      @media (max-width: tablet-upper-limit)
        height 330px
    .color-block
      color b2c-white
  &--double-sided
    //min-height 338px
    perspective 1000px
    transform-style: flat
    transition transform 1s, right 1s
    @media(max-width: mobile-upper-limit)
      min-height 338px
    .{newAppName}-card__background
      &:after
        position absolute
        top 20px
        left 20px
        right 20px
        bottom 20px
        content ''
        background linear-gradient(rgba(main-color, 0) 0%,rgba(main-color, .67) 50%, main-color 100%)
    .{newAppName}-card__content
      height 100%
      //max-height 590px
      padding-top: 310px
      padding-right 55px
      box-sizing border-box
      position absolute
      top 0
      left 0
      visibility visible
      z-index 2
      transition visibility .5s .3s cubic-bezier(0, 1, 1, 0)
      @media (max-width: tablet-upper-limit)
        max-height none
        padding-top 100px
      @media (max-width: mobile-upper-limit)
        padding-right 0
        padding-top 50px
    .{newAppName}-card__background
      visibility visible
      transition visibility .5s .3s cubic-bezier(0, 1, 1, 0)
    &.is-flipped
      @media (min-width: laptop-lower-limit)
        transform rotateY(180deg)
        right 0
  &__reverse
    position absolute
    transform: rotateY(180deg)
    background-color b2c-white
    padding 40px 40px 20px
    //min-height 590px
    visibility hidden
    transition visibility .5s .3s cubic-bezier(0, 1, 1, 0)
    @media (max-width: tablet-upper-limit)
      padding 20px
      //min-height 720px
    @media (max-width: mobile-upper-limit)
      //min-height 770px
      padding-top: 40px
    .{newAppName}-font-bold
      &:nth-child(n+2)
        margin-top vertical-space

  &-close
    top 20px
    right 20px
    position absolute
    cursor pointer
    @media (max-width: tablet-upper-limit)
      display none

.is-flipped
  @media (min-width: laptop-lower-limit)
    .{b2bAppName}-card__reverse
      z-index 3
      visibility visible
    .{newAppName}-card__content
      visibility hidden
    .{newAppName}-card__background
      visibility hidden

.{b2bAppName}-product__triangle
  position absolute
  top 0
  left 0
  right 0
  transform translateY(-99%)

.{b2bAppName}-category
  height 364px
  box-sizing border-box

  @media (max-width: mobile-upper-limit)
    height 420px

  &__content
    display flex
    flex-direction row
    height 100%

    &-top
      overflow hidden

  &__triangle
    width 76px
    height 100%
    position absolute
    top 0
    bottom 0
    left calc(((100% - 76px) / 2))
    right calc(((100% - 76px) / 2))

    @media (max-width: tablet-upper-limit)
      display none

  &__image
    width calc(((100% + 76px) / 2))
    background-position 50% 50%
    background-size cover
    background-repeat no-repeat

    @media (max-width: tablet-upper-limit)
      display none

  &__text-content
    display flex
    flex-direction column
    justify-content space-between
    width calc(((100% - 76px) / 2))
    padding vertical-space

    @media (max-width: tablet-upper-limit)
      width 100%
      padding-top vertical-space * 2

  &__mobile-header
    width 60px
    height 60px
    background-position 50% 50%
    background-repeat no-repeat
    margin-bottom vertical-space

    @media (min-width: desktop-lower-limit)
      display none

  &--large
    @media (max-width: mobile-upper-limit)
      height 420px

    .{b2bAppName}-category__image
      display block !important

      @media (max-width: mobile-upper-limit)
        width 100%
        height 40%
        background-size cover

    .{b2bAppName}-category__text-content
      padding vertical-space * 1.5

      @media (max-width: tablet-upper-limit)
        width calc(((100% - 76px) / 2))

      @media (max-width: mobile-upper-limit)
        width 100%
        height 60%

    .{b2bAppName}-category__content
      @media (max-width: mobile-upper-limit)
        flex-direction column-reverse

    .{b2bAppName}-category__text-content
      @media (max-width: tablet-upper-limit)
        padding vertical-space

    .{b2bAppName}-category__triangle
      @media (min-width: tablet-lower-limit)
        display block

  &--medium
    .{b2bAppName}-category__mobile-header
      @media (min-width: laptop-lower-limit)
        display none

  &--small
    .{b2bAppName}-category__text-content
      width 100%
      padding-top vertical-space * 2

    .{b2bAppName}-category__mobile-header
      display block !important

    .{b2bAppName}-category__content-top--cut
      max-height 258px

  .{newAppName}-price
    opacity 1 !important

.triple
  .{b2bAppName}-card
    &__discount-line-1
      background-color b2c-light-blue-high

    &__discount-line-2
      background-color b2c-orange

.mb5
  margin-bottom 5px

.{b2bAppName}-hint
  display inline-block
  border-radius 50%
  margin-left 6px
  position relative
  z-index 9
  vertical-align middle
  cursor pointer
  &__icon
    width 20px
    height 20px
    position absolute
    right 10px
  &__text
    box-sizing border-box
    color b2b-state
    text-align left
    padding 10px
    position relative
    top -50%
    right -40px
    z-index 9
    transform translateY(-50%)
    font-size 14px
    line-height 18px
    @media (max-width: tablet-upper-limit)
      right auto
      left 10px
      top auto
      bottom auto
      transform translateX(-50%) translateY(30px)
  &--tooltip
    color b2b-state
    text-align center
    background-color b2b-cool-grey05-no-opacity
    width 20px
    height 20px
    .{b2bAppName}-hint__text
      background-color b2b-cool-grey05-no-opacity
      min-width 180px
      max-width 250px
      min-height 70px
      border-radius 5px
      right -30px
      top 50%
      @media (max-width: tablet-upper-limit)
        min-width 250px
        max-width none
      &:before
        content ""
        width 0
        height 0
        border-width 5px 5px 5px 0
        border-style solid
        border-color transparent #f1f3f5 transparent transparent
        position absolute
        top calc(50% - 5px)
        left -5px
        @media (max-width: tablet-upper-limit)
          border-width 0 5px 5px 5px
          border-color transparent transparent #f1f3f5 transparent
          left calc(50% - 5px)
          top -5px
  &--confirmed
    .{b2bAppName}-hint__text
      background-color b2c-green
      height 38px
      min-width 230px
      color b2c-white
      left calc(100% + 15px)
      transform translateY(-25%)
      @media (max-width mobile-upper-limit)
        left auto
        right 30px
      &:before
        content ""
        width 0
        height 0
        border-width 5px 5px 5px 0
        border-style solid
        border-color transparent b2c-green transparent transparent
        position absolute
        top calc(50% - 5px)
        left -5px
        @media (max-width mobile-upper-limit)
          left auto
          right -5px
          border-color transparent transparent transparent b2c-green
          border-width 5px 0 5px 5px
  .{b2bAppName}-hint__icon
      right 0
  &--denied
    .{b2bAppName}-hint__text
      background-color error-color
      height 38px
      min-width 230px
      color b2c-white
      left calc(100% + 15px)
      transform translateY(-25%)
      @media (max-width mobile-upper-limit)
        left auto
        right 30px
      &:before
        content ""
        width 0
        height 0
        border-width 5px 5px 5px 0
        border-style solid
        border-color transparent error-color transparent transparent
        position absolute
        top calc(50% - 5px)
        left -5px
        @media (max-width mobile-upper-limit)
          left auto
          right -5px
          border-color transparent transparent transparent error-color
          border-width 5px 0 5px 5px
  .{b2bAppName}-hint__icon
      right 0

  .input + &
    position absolute
    right -30px
    top 14px
    @media (max-width mobile-upper-limit)
      right 0

