
.pc-navs
  width 100%
  height 100%
  margin auto
  position absolute
  left 0
  right 0

  &__side
    height 100%
    position absolute
    z-index 3
    cursor pointer

    &-left
      left 0

    &-right
      right 0

  &__arrows
    width 100%
    margin-top 0
    margin-left auto
    margin-right auto
    position absolute
    top 50%
    bottom auto
    left 0
    right 0
    z-index 4
    pointer-events none

  &__button
    box-sizing border-box
    color transparent
    text-decoration none
    background-color #ffffff
    border-radius 50%
    box-shadow 0 0 30px 0 rgba(0, 0, 0, .1)
    padding 15px 20px
    position absolute
    top 0
    bottom 0
    z-index 5
    cursor pointer
    transform scale(1)
    transition all .25s ease
    pointer-events auto
    -webkit-border-radius 50%
    -webkit-box-shadow 0 0 30px 0 rgba(0, 0, 0, .1)

    &:after
      content ""
      width 10px
      height 16px
      margin auto
      position absolute
      top 1px
      bottom 0
      left 0
      right 0

    &:hover
      transform scale(1.1)

  &-prev
    left 40px

    &:after
      background-image url("data:image/svg+xml;base64,")
      left -5px

    @media (max-width: 1024px)
      left 10px

  &-next
    right 40px

    &:after
      background-image url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIxMCIgaGVpZ2h0PSIxNiIgdmlld0JveD0iMCAwIDEwIDE2Ij4gICAgPHBhdGggZmlsbD0iIzAwMCIgZmlsbC1ydWxlPSJldmVub2RkIiBkPSJNMS44OTIgMEwwIDEuODY3IDYuMjE2IDggMCAxNC4xMzMgMS44OTIgMTYgMTAgOHoiIG9wYWNpdHk9Ii43Ii8+PC9zdmc+")
      right -5px

    @media (max-width: 1024px)
      right 10px

  &-more
    color rgba(0, 0, 0, .7)
    margin-top 30px
    position absolute
    top 50%
    right 0
    z-index 3

  &--pending
    pointer-events none

  &--disabled
    opacity 0
    cursor default
    transform scale(0) !important
    pointer-events none
