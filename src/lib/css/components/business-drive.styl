      max-height calc(100vh - 20px)

.rt-scrollbar-transition,
.rt-scrollbar__scrollbar-vertical
  transition: all 0.5s ease

.rt-scrollbar-transition--scrollbar
  transition: opacity 0.5s linear

.rt-scrollbar__wrapper
  margin: 0 auto
  overflow: hidden
  position: relative

.rt-scrollbar__wrapper:hover .rt-scrollbar__scrollbar-vertical
  opacity: 1

.rt-scrollbar__scrollbar-vertical
  opacity: 0.5
  position: absolute
  background: transparent

.rt-scrollbar__scrollbar-vertical:hover
  background: rgba(16, 24, 40, 0.6)

.rt-scrollbar__scrollbar-vertical .scrollbar
  position: relative
  background: rgba(16, 24, 40, 0.6)
  border-radius: 10px
  cursor: default

.rt-scrollbar__scrollbar-vertical
  width: 10px
  height: 100%
  top: 0
  right: 0

.rt-scrollbar__scrollbar-vertical .scrollbar
  width: 10px



@keyframes fadeIn1
  //0%
  //  transform translateY(150px)
  //  opacity 0
  50%
    opacity .1
  100%
    transform translateY(0)
    opacity 1

@keyframes fadeIn2
  0%
    opacity 0
  100%
    opacity 1

@keyframes lineThrough1
  0%
    width 0
  100%
    width 100%

@keyframes bounce
  0%
    transform scale(1)
    opacity .8
  50%
    opacity 1
    transform scale(1.015)
  100%
    opacity 1
    transform scale(1)
