.business-drive
  position relative
  &__header
    padding 10px 0
    position fixed
    top 0
    left 0
    right 0
    z-index 20
    //.button-wrapper
    //  margin-top 5px
    &-menu
      width calc(100% - 50px)
      display: inline-block
      vertical-align: middle
      margin-bottom -5px
      @media(max-width mobile-upper-limit)
        position: absolute
        top -100vh
        transition top .4s
      &--active
        @media(max-width mobile-upper-limit)
          display: block
          position: absolute
          top: 50px
          width: 100vw
          height: calc(100vh - 50px)
          left: -10px
          background-color b2c-white
          box-sizing border-box
          padding 20px
        .rt-scroll-tab-header
          display block
          height auto!important
          margin-left 0
        .rt-scroll-tab-nav
          flex-direction column
          justify-content flex-start
          height auto
          align-items flex-start
        .button-wrapper
          float none!important
  .mobile-burger
    width 24px
    height 3px
    margin 18px 0
    //float: right
    background-color: #313948
    position relative
    &:before,
    &:after
      position absolute
      content: ''
      width 100%
      height 3px
      left 0
      background-color: #313948
      transition-property top, bottom, transform
      transition-duration .3s
    &:before
      top -8px
    &:after
      bottom -8px
    &--active
      background-color: transparent
      &:before
        transform rotate(45deg)
        top 0
      &:after
        transform rotate(-45deg)
        bottom 0
    &-wrapper
      float: right
    @media(min-width tablet-lower-limit)
      display none
  &__footer
    padding 20px 0
    font-size 14px
    line-height 18px
  &__footer-link
    margin-left 30px
    @media(max-width mobile-upper-limit)
      margin-left: 0
    &+.business-drive__footer-link
      @media(max-width mobile-upper-limit)
        margin-left 20px
  &__tabs-wrapper
    display inline-block
    width auto
    //vertical-align: bottom
    .rt-scroll-tab-header
      height 34px
      &__item
        font-size 18px
        line-height 34px
        margin 0 20px
        position relative
        @media(max-width tablet-upper-limit)
          font-size 16px
          line-height 22px
        &:after
          position absolute
          content: ''
          width 0
          height 3px
          background-color main-color
          bottom -12px
          left 0
          transition width .3s linear
        &--active
          border-bottom-color transparent!important
          &:after
            width 100%
  .rt-logo
    vertical-align middle
  .button-wrapper
    float: right
  .rtb-popup
    background-color: #273656
    color b2c-white
    padding 0
    overflow-x hidden
    @media(max-width tablet-upper-limit)
      overflow-y auto
    &-close
      z-index 5
      path
        fill b2c-white
        fill-opacity 1
    .popup-image
      position relative
      width 100%
      height 290px
      background-size: cover
      background-position: 50% 50%
    .popup-title
      font-size 56px
      line-height 69px
      margin-bottom 40px
      margin-top -8px
      position relative
      @media(max-width mobile-upper-limit)
        font-size 27px
        line-height 37px
        margin-top: -4px
      .speaker-name__name,
      .speaker-name__surname
        border-width 8px
        @media(max-width mobile-upper-limit)
          border-width 4px
    .popup-title,
    .popup-reputation,
    .popup-description,
    .popup-theme
      padding 0 30% 0 20px
      @media(max-width mobile-upper-limit)
        padding-right 20px
    .popup-description
      padding-bottom 20px
      opacity .5
      font-size 28px
    .popup-theme
      margin-bottom: 35px
    .popup-reputation
      margin-bottom: 15px
    .row
      max-height none
  .map-block
    width 100%
    height 420px
    iframe
      max-width 100%
  .popup-content
    @media(max-width tablet-upper-limit)
      padding-bottom 50px
  .rt-scroll-tab-header__item
    @media(max-width mobile-upper-limit)
      font-size 18px
      line-height 24px
      font-weight 400
      margin 0
      margin-bottom 30px

.animated-text
  font-size 12vh
  line-height 12vh
  height 100vh
  padding-top 10vh
  box-sizing border-box
  display flex
  flex-direction column
  @media(max-width tablet-upper-limit)
    font-size 75px
    line-height 68px
    height 500px
  @media(max-width mobile-upper-limit)
    padding-top 60px
    font-size 34px
    line-height 37px
  &__line
    opacity 0
    &-item
      position relative
      &:after
        position absolute
        content: ''
        top calc(50% + 5px)
        left 0
        width 0
        height 20px
        background-color b2c-orange
        transform translateY(-50%)
        @media(max-width tablet-upper-limit)
          top calc(50% + 4px)
          height 14px
        @media(max-width mobile-upper-limit)
          height 7px
          top calc(50% + 2px)
  &--active
    .animated-text__first-line
      transform translateY(100%)
      opacity 0
      animation fadeIn1 .5s .3s ease-out forwards
    .animated-text__second-line
      transform translateY(140%)
      opacity 0
      animation fadeIn1 .5s .4s ease-out forwards
      .animated-text__line-item
        &:after
          animation lineThrough1 .4s .6s ease-out forwards
    .animated-text__third-line
      transform translateY(180%)
      opacity 0
      animation fadeIn1 .5s .5s ease-out forwards
      .animated-text__line-item
        &:after
          animation lineThrough1 .4s .8s ease-out forwards
    .animated-text__fourth-line
      transform translateY(220%)
      opacity 0
      animation fadeIn1 .5s .6s ease-out forwards
      .animated-text__line-item
        &:after
          animation lineThrough1 .4s 1s ease-out forwards
    .animated-text__fifth-line
      transform translateY(480%)
      opacity 0
      animation fadeIn1 .5s .9s ease-out forwards
    .animated-text__sixth-line
      animation fadeIn1 .4s 1.3s linear forwards
      transform translateY(100%)
    .animated-text__seventh-line
      animation fadeIn1 .4s 1.4s linear forwards
      transform translateY(100%)
    .animated-text__eighth-line
      font-size 32px
      line-height 40px
      margin-top 30px
      animation fadeIn2 .4s 1.7s linear forwards
      @media(max-width tablet-upper-limit)
        margin-top: 20px
      .meeting-legend
        padding-left 40px
        position relative
        display inline-block
        opacity .8
        animation bounce .5s 2.1s linear forwards
        @media(max-width tablet-upper-limit)
          font-size 21px
          line-height 34px
          padding-left 30px
        @media(max-width mobile-upper-limit)
          font-size 18px
          line-height 26px
        &:nth-child(2)
          margin-left 30px
          @media(max-width tablet-upper-limit)
            margin-left: 20px
          @media(max-width mobile-upper-limit)
            margin-left: 0
        .icon
          position absolute
          left 0
          top 5px
          width 30px
          height 30px
          @media(max-width tablet-upper-limit)
            width 20px
            height 20px
          @media(max-width mobile-upper-limit)
            top 0
    .animated-text__ninth-line
      transform translateY(480%)
      opacity 0
      animation fadeIn2 .4s 2.2s ease-out forwards
      .button-bounce
        animation bounce .5s 2.6s linear forwards
  &__footnote
    font-size 32px
    line-height 40px
    top 40px
    right -40px
    position absolute
    min-width 240px
    transform translateX(100%)
    @media(max-width tablet-upper-limit)
      font-size 22px
      line-height 28px
      top 26px
      right -20px
    @media(max-width mobile-upper-limit)
      font-size 12px
      line-height 14px
      top 10px
      right -9px
  .rt-button
    height 55px

