.rt-timeline
  position relative
  &:after
    position absolute
    content: ''
    top 0
    bottom 0
    width 8px
    background-color b2c-orange
    left calc((100% - 8px) / 2)
    @media(max-width tablet-upper-limit)
      width 6px
      left calc((100% - 6px) / 2)
    @media(max-width mobile-upper-limit)
      left 0
      width 4px
  &__item
    color b2c-white
    font-weight 500
    width 50%
    margin-left 50%
    padding-left 10px
    position relative
    @media(max-width mobile-upper-limit)
      width 100%
      margin-left: 0
      margin-top 0!important
      &+&
        margin-top 40px!important
    .rt-timeline__item-image-wrapper
      left 200px
      @media(max-width tablet-upper-limit)
        left 165px
    &:nth-child(2n - 1)
      text-align: right
      margin-left: 0
      padding-right 10px
      padding-left: 0
      @media(max-width mobile-upper-limit)
        text-align left
        padding-right 0
        padding-left 10px
      .rt-timeline__item-image-wrapper
        right 200px
        left auto
        @media(max-width tablet-upper-limit)
          right 165px
    .timestamp
      position relative
      padding-top 5px
      padding-bottom 2px
      width 177px
      display: inline-block
      font-weight 500
      @media(max-width tablet-upper-limit)
        width 118px
      &:before,
      &:after
        position absolute
        content ''
        width 100%
        height 4px
        background-color b2c-white
        left 0
      &:before
        top 0
      &:after
        bottom 0
      &-wrapper
        z-index 2
        position relative
    &--important
      .timestamp
        color b2c-orange
        font-size 56px
        padding-bottom 0
        width 232px
        @media(max-width tablet-upper-limit)
          width 176px
          font-size 46px
          line-height 1
          padding-top 10px
          padding-bottom 5px
        &:before,
        &:after
          background-color b2c-orange
          height 8px
          @media(max-width tablet-upper-limit)
            height 6px
      .rt-timeline__item-theme,
      .rt-timeline__item-speaker
        text-align left
    &-image
      position: absolute
      top: 0
      bottom: 0
      width: auto
      left: 50%
      transform: translateX(-50%)
      height 100%
      &-wrapper
        width 275px
        height 183px
        position absolute
        top -94px
        z-index 1
        @media(max-width tablet-upper-limit)
          width 198px
          height 132px
          top -71px
        @media(max-width mobile-upper-limit)
          display none
    .rt-timeline__item-speaker
      margin-top vertical-space
      @media(max-width tablet-upper-limit)
        margin-top vertical-space * .5
    &-description,
    &-reputation
      display none

