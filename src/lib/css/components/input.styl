      z-index 10

  //.text-field__line
  //  background-color transparent

.text-field--error
  .{b2bAppName}-input-clear
    .input-clear__icon
      display block
      fill error-color

.input-arithmetic
  position absolute
  top 25px
  right 0
  z-index 2

.input-arithmetic__button
  cursor pointer
  opacity: 0.5
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity
  &:hover
    opacity: 1
  &+&
    margin-left horizontal-space * .25

.input-arithmetic__button-icon
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property stroke
  stroke main-color

  .{newAppName}-dark-theme &
    stroke b2c-white

.input-label
  color main-color05
  font-size 12px
  line-height 16px
  margin-top 3px

  .{newAppName}-dark-theme
    &
      color b2c-white05

    .{newAppName}-card &
      color main-color05

  .text-field--error + &
    display none

.input-wrapper
  position: relative
  &+&
    margin-top 5px

  &--outlined
    .text-field
      position relative

      &__border
        max-height 60px
        border 1px solid rgba(b2c-cool-grey, .9)
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        transition border-color .3s linear

    &:hover
      .text-field--orange
        .text-field__border
          border-color b2c-orange

      .text-field--purple
        .text-field__border
          border-color b2c-purple

    // .text-field--error
    // border 1px solid error-color
    // &:hover,
    // &:focus
    // border 1px solid error-color
    .{b2bAppName}-text-field__error-message
      position relative
      top auto
      bottom 0
      left -21px
      right -21px
      transform none
      padding 5px 20px
      width calc(100% + 42px)
      min-height auto
      &:before
        border none
    .input-element[disabled]+.text-field__border
        border 1px solid rgba(b2c-cool-grey, .9)!important

  .{newAppName}-button
    position absolute
    bottom 10px
    right 0
    z-index 9

.rt-col .rt-input+&
  margin-top 20px

.input+.{b2bAppName}-card__hint
  position absolute
  right -40px
  top: 50%
  transform translateY(-50%)

