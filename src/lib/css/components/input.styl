@require "~nib/lib/nib/vendor.styl"

.input-element
  width 100%
  color main-color
  background-color transparent
  border none
  outline none
  padding-bottom 7px
  padding-right 23px
  position relative
  z-index 2
  appearance field
  position: relative
  placeholder(color main-color05, )

  .input--with-button &
    padding-right horizontal-space * 3

  &[disabled]
    color main-color03
    placeholder(color main-color03, )

  .{newAppName}-input--white &,
  .{newAppName}-card--has-white-color &
    color white

    .{newAppName}-dark-theme &
      color white

  .{newAppName}-dark-theme &
    color #fff

  .{newAppName}-card &
    color main-color

.input-clear
  position absolute
  top 25px
  right 5px
  z-index 2
  cursor pointer
  opacity: 0
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, visibility
  .input-element:hover+.text-field__line+.floating-placeholder+&,
  .input-element:focus+.text-field__line+.floating-placeholder+&,
  .input-element:focus+.text-field__border+.floating-placeholder+&,
  .input-element:hover+.text-field__border+.floating-placeholder+&
    opacity: 1
    visibility: visible



.input-clear__icon
  fill main-color07-no-opacity

  .{newAppName}-dark-theme &,
  .{newAppName}-input--white &
    fill white

  .{newAppName}-card &
    fill main-color

  .{newAppName}-card--has-white-color &
    fill white

.{b2bAppName}-input-clear
  top 23px
  right 20px

.password-icon__icon
  position: absolute
  width: 20px
  height: 10px
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.password-icon__icon-show
  height: 12px


.{b2bAppName}-input
  .floating-placeholder
    margin-top: 3px
  .input-element
    padding-bottom 10px

  .text-field--error
    .input-clear__icon
      fill error-color

  .password-icon
    right 20px
    position: absolute

  &--hidden
    display none

  &--approved
    position relative
    &:after
      position absolute
      content ''
      top 25px
      margin-top: auto
      margin-bottom: auto
      right 16px
      width 20px
      height 20px
