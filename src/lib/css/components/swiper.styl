//    padding: 0 70px

.in-plus-card
  @media (max-width: laptop-upper-limit) and (min-width: laptop-lower-limit)
    max-width calc(275px + 20px)
  @media (max-width: tablet-upper-limit)
    min-width calc(35vw + 20px)
    max-width none
  @media (max-width: mobile-upper-limit)
    min-width calc(75vw + 20px)

keyframes show-no-moves-prev
  0%
    transform translateX(0)

  50%
    transform translateX(40px)

  100%
    transform translateX(0)

keyframes show-no-moves-next
  0%
    transform translateX(0)

  50%
    transform translateX(-40px)

  100%
    transform translateX(0)
