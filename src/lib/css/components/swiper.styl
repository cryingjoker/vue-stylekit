swiperName = "rtk-carousel"
swiperZIndex = 10
scrollHSpace = 10px
scrollHSpacePC = 70px

.{swiperName}
  position relative
  z-index swiperZIndex
  width inherit
  @media (max-width: tablet-upper-limit)
    max-width: none

  &__container
    display block
    position relative

  &__overlay
    display block
    overflow hidden
    overflow-x auto
    -webkit-overflow-scrolling touch
    white-space nowrap
    position relative
    transform translate3d(0, 0, 0)
    -ms-overflow-style none
    scrollbar-width none
    margin: 0 auto
    width calc(100vw - (100vw - 100%))
    max-width 100vw
    @media (max-width: tablet-upper-limit)
      padding-right 0
      padding-left 0

  &__overlay::-webkit-scrollbar
    display none

  &__inner
    display flex
    flex-direction row
    white-space normal
    padding 50px 0 10px
    width calc(100vw - (100vw - 100%) - 140px)
    max-width 1340px
    @media (max-width: tablet-upper-limit)
      width calc(100vw - (100vw - 100%))

  &__spacer
    display flex

  &-slide
    opacity 1
    position relative
    z-index swiperZIndex + 1
    backface-visibility hidden
    user-select none
    padding 0 10px
    @media (max-width: laptop-upper-limit) and (min-width: laptop-lower-limit)
      width calc(275px + 20px)
      flex-basis calc(275px + 20px)!important
      max-width calc(275px + 20px)!important
    @media (max-width: tablet-upper-limit)
      width calc(35vw + 20px)
      flex-basis calc(35vw + 20px)!important
      max-width calc(35vw + 20px)!important
    @media (max-width: mobile-upper-limit)
      width calc(75vw + 20px)
      flex-basis calc(75vw + 20px)!important
      max-width calc(75vw + 20px)!important

    &.marked
      transform scale(1.02)

    &.not-shown
      opacity .5
      pointer-events none

  &.is-touch-device
    .{swiperName}__overlay
      overflow auto

    .{swiperName}__inner
      overflow-x auto
      overflow-y hidden
      -webkit-scroll-padding-inline-start scrollHSpace
      scroll-padding-inline-start scrollHSpace
      -webkit-scroll-snap-type mandatory
      -webkit-scroll-snap-type-x mandatory
      scroll-snap-type mandatory
      scroll-snap-type x mandatory

    .{swiperName}-slide
      max-width 90vw
      user-select none
      -webkit-scroll-snap-align start
      scroll-snap-align start

      &:first-child
        @media (max-width: tablet-upper-limit)
          margin-left scrollHSpace

    .{swiperName}__spacer
      @media (max-width: tablet-upper-limit)
        min-width scrollHSpace

  &.is-animating,
  &.is-disabled-scrolling
    .{swiperName}__overlay
      overflow-x hidden

    .{swiperName}.is-touch-device
      .{swiperName}__inner
        overflow-x hidden

  &.is-animating,
  &.is-scrolling
    .{swiperName}-slide
      pointer-events none

  &.show-no-move-prev
    animation show-no-moves-prev .9s ease-in-out

  &.show-no-move-next
    animation show-no-moves-next .9s ease-in-out

  &-override
    width inherit
    .{swiperName}__inner-default
      flex-wrap wrap

    .{swiperName}-slide
      flex 0

      &:first-child
        @media (max-width: tablet-upper-limit)
          margin-left 0 !important

