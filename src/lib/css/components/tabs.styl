.{newAppName}-tabs
  width 100%
  font-size 18px
  &-content
    border-top 1px solid main-color01
    .{newAppName}-row-list__item
      padding-top vertical-space
      padding-bottom vertical-space
      @media (max-width: mobile-upper-limit)
        padding-top vertical-space
        padding-bottom vertical-space
        &+.{newAppName}-row-list__item
          border-top none
          padding-top: 0
  &--vertical
    display flex
    .{newAppName}-tabs-navigation
      flex-direction: column
      margin 0
      white-space unset!important
      width 100%
      &-wrapper
        width 34%
        padding-right calc((100% + 20px) / 12)
        border-left 1px solid main-color01
        display inline-table!important
      &__item
        position relative
        display block
        &+.{newAppName}-tabs-navigation__item
          margin-top vertical-space * .5
        &:before
          position absolute
          content ''
          top 0
          left -1px
          width 2px
          height 0
          border-bottom none
          text-shadow 0 0 0
          border-left 2px solid transparent
          transition-timing-function ease-in-out
          transition-duration .2s
          transition-property border, height, text-shadow
        &:hover,
        &:focus,
        &--is-active
          &:before
            height 100%
            border-left-color b2c-purple
      &__item-name
        &:before
          display none
    .{newAppName}-tabs-content
      border-top none
      //padding-left vertical-space * 2
      width 66%
      &__item
        padding-bottom vertical-space * .5
      .rt-font-paragraph
        margin-bottom 5px
        &:not(:first-of-type)
          margin-top vertical-space
  &--centered
    text-align: center
    .{newAppName}-tabs-navigation-wrapper
      display: inline-block
      border-bottom 1px solid main-color01
      height 35px
      @media (max-width: tablet-upper-limit)
        position relative
        width calc(100% + 40px)
        left -20px
    .{newAppName}-tabs-navigation
      margin-bottom 30px
      @media (max-width: tablet-upper-limit)
        width 100%
        margin-left 0
        margin-right 0
        overflow-y hidden!important
    .{newAppName}-tabs-navigation__item
      white-space nowrap
    .rt-tabs-content
      border-top none

.{newAppName}-tabs-navigation
  display flex
  flex-direction row
  width calc(100% + 20px)
  margin-left -(vertical-space)
  margin-right -(vertical-space)
  scrollbar-width: none
  &::-webkit-scrollbar
    display: none

  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display block
    overflow auto
    overflow-y hidden
    white-space nowrap
    position relative

.{newAppName}-tabs-navigation-wrapper
  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display block
    overflow hidden
    position relative
    &::-webkit-scrollbar
      display: none

.{newAppName}-tabs-navigation__item
  padding-left vertical-space
  padding-right vertical-space
  cursor pointer

  .rt-tabs-tablet &,
  .rt-tabs-mobile &
    display inline-block

.{newAppName}-tabs-navigation__item-name
  box-sizing border-box
  text-align inherit
  border none
  outline none
  padding-bottom horizontal-space * .5
  position relative

  &:before
    content ""
    width 0
    height 2px
    text-shadow 0 0 0
    border-bottom 2px solid transparent
    position absolute
    bottom -1px
    left 0
    right 0
    transition-timing-function ease-in-out
    transition-duration .2s
    transition-property border, width, text-shadow

  &:hover,
  &:focus,
  .{newAppName}-tabs-navigation__item--is-active &
    &:before
      width 100%
      border-bottom-color b2c-purple

  .{newAppName}-tabs-navigation__item--is-active &
    cursor default

  cursor pointer
.{newAppName}-tabs--round-tablet-view
  .{newAppName}-tabs-navigation__item
    padding-left: 0
    padding-right: 0
  .rt-tabs-navigation
    margin-left: 0
    margin-right: 0
  .rt-tabs-navigation__item-name
    padding-left: 20px
    padding-right: 20px
    padding-top: 16px
    padding-bottom: 14px
    &:before
      width: 0!important
    &:hover,
    &:focus
      border-bottom-width: 0

  .{newAppName}-tabs-navigation
    overflow: hidden
  .{newAppName}-tabs-navigation-wrapper
    overflow: hidden
    display: inline-block
    border-radius 10px
    border 2px solid b2c-purple
  .{newAppName}-tabs-navigation__item-name
    padding-left: 20px
    padding-right: 20px
  .{newAppName}-tabs-navigation__item
    background-color: transparent

    &+&
      margin-left: -1ex
  .{newAppName}-tabs-navigation__item--is-active
    background-color: b2c-purple
    color #fff
  .{newAppName}-tabs-content
    border-top-width: 0

.rt-tabs
  .rt-card--gradient-shadow
    background-color main-color
    .rt-card__background
      height 100%
      width calc(((100vw - 140px - 20px)/12*10)/2)
      top 0
      bottom 0
      left 0
      z-index 4
      background-position-x 0
      background-size: cover
      @media (max-width: desktop-lower-limit)
        max-width calc(1320px/12*10/2)
      @media (max-width: mobile-upper-limit)
        width 100%
        height calc(100vw - 40px)
      &:after
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        content ''
        background linear-gradient(to right, rgba(16, 24, 40, 0), rgba(16, 24, 40, 0.23) 33%, rgba(16, 24, 40, 0.67) 63%, rgba(16, 24, 40, 0.9) 85%, #101828);//linear-gradient(to right, rgba(16, 24, 40, 0), rgba(16, 24, 40, 0.23) 17%, rgba(16, 24, 40, 0.67) 22%, rgba(16, 24, 40, 0.9) 42%, #101828 50%, #101828 100%)
        z-index 1
        @media (max-width: mobile-upper-limit)
          background linear-gradient(to bottom, rgba(16, 24, 40, 0), rgba(16, 24, 40, 0.23) 33%, rgba(16, 24, 40, 0.67) 63%, rgba(16, 24, 40, 0.9) 85%, #101828);
    .rt-card__content
      @media (max-width: tablet-upper-limit)
        z-index 5
