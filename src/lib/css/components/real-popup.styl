.{b2bAppName}-popup-wrapper
  //display none
  position fixed
  top -100vh
  left 0
  right 0
  bottom 0
  width 100vw
  height 100vh
  z-index 999
  transition top .4s ease-in-out
  opacity 0
  background-color rgba(255, 255, 255, .75)
  &--active
    top 0
    opacity 1
    .{b2bAppName}-popup
      &--center-center
        transform translateY(-50%)
        top 50vh
        height auto
        @media (max-width: tablet-upper-limit)
          top calc(50vh + 40px)
        @media (max-width: mobile-upper-limit)
          top calc(50vh + 20px)
      &--top-center
        top 0
      &--bottom-center
        top 20vh
        @media (max-width: tablet-upper-limit)
          top 40px
        @media (max-width: mobile-upper-limit)
          top 20px
  &--mobile-only
    @media (min-width: desktop-lower-limit)
      display none

.{b2bAppName}-popup
  position relative
  width 100%
  height auto
  max-height 80vh
  padding vertical-space * 2
  display inline-block
  background-color b2c-white
  box-sizing border-box
  box-shadow 0 20px 30px rgba(main-color, .2)
  overflow-y auto
  bottom 100vh
  .popup-content
    @media (max-width: tablet-upper-limit)
      padding-bottom: 100px
  @media (max-width: tablet-upper-limit)
    max-height: calc(100vh - 40px)
  @media (max-width: mobile-upper-limit)
    max-height: calc(100vh - 20px)
  &-close
    position absolute
    top 20px
    right 20px
    cursor pointer
  .rt-annotation__content
    max-height none!important
