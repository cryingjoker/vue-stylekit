.text-field--purple
  .input-element:focus + .text-field__line + .floating-placeholder,
  .input-element:focus + .text-field__border + .floating-placeholder,
  .input-element:focus + .floating-placeholder,
  .textarea-element:focus + .text-field__line + .floating-placeholder,
  .textarea-element:focus + .text-field__border + .floating-placeholder,
  .textarea-element:focus + .floating-placeholder
    color b2c-purple
  .input-element:focus+.text-field__line:before
    background-color b2c-purple

.text-field--orange
  .input-element:focus + .text-field__line + .floating-placeholder,
  .input-element:focus + .text-field__border + .floating-placeholder,
  .input-element:focus + .floating-placeholder,
  .textarea-element:focus + .text-field__line + .floating-placeholder,
  .textarea-element:focus + .text-field__border + .floating-placeholder,
  .textarea-element:focus + .floating-placeholder
    color b2c-orange
  .input-element:focus+.text-field__line:before
    background-color b2c-orange

.{b2bAppName}-input,
.{b2bAppName}-textarea
  .input-element:focus + .text-field__line + .floating-placeholder,
  .input-element:focus + .text-field__border + .floating-placeholder,
  .input-element:focus+.floating-placeholder,
  .textarea-element:focus + .text-field__line + .floating-placeholder,
  .textarea-element:focus + .text-field__border + .floating-placeholder,
  .textarea-element:focus + .floating-placeholder,
  .floating-placeholder--go-top
      top 10px!important
      font-size 14px

