.rt-game-banner__paginator
  text-align: right
  @media (max-width: tablet-upper-limit)
    text-align center
  @media (max-width: mobile-upper-limit)
    position: sticky
    background-color: #122545
    padding-top: 15px
    z-index 2
    padding-bottom: 15px
    white-space nowrap

.rt-game-banner__container
  height: 100%

.rt-game-banner__paginator-item
  display inline-block
  box-sizing border-box
  position relative
  z-index 3
  cursor pointer
  width auto


  & + &
    margin-left 80px

  &__icon
    width inherit
    height inherit
    transform rotate(-90deg)
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property stroke-dasharray, stroke-width
    stroke #fff
    stroke-dasharray 0
    stroke-width 0

    .rt-game-banner__paginator-item:hover &,
    .rt-game-banner__paginator-item--is-active &
      stroke-dasharray 60
      stroke-width 1px

.rt-game-banner__paginator-item:before
  @media (max-width: mobile-upper-limit)
    content ''
    display: block
    background-color: #FF4F12
    position: absolute;
    bottom: 0
    right: 0
    left: 0
    border none
    width: 100%
    height: 0
    border-radius 0
    top: inherit
    bottom: -17px
    opacity: 0
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property height, opacity

.rt-game-banner__paginator-item__span
  display: none
  @media (max-width: mobile-upper-limit)
    display: block

.rt-game-banner__paginator-item:before {
  content: ''
  position: absolute
  bottom: -22px
  height: 3px
  left: 0
  right: 0
  width: 100%
  background-color: #FF4F12
  opacity 0
  visibility hidden
  transition-timing-function ease-in-out
  transition-duration .3s
  transition-property opacity, visibility
  @media (max-width: mobile-upper-limit) {
    bottom: -15px
  }
}

.rt-game-banner__paginator-item:hover:before,
.rt-game-banner__paginator-item--is-active:before {
  opacity: 1
  visibility visible
}

