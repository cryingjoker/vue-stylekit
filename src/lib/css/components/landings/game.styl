.rt-game-banner
  min-height: 500px
  height: 500px
  display: flex
  width: 100%
  flex-direction column
  background-color: #000
  position: relative
  @media (max-width: mobile-upper-limit)
    height: 404px

  .color-line-wrapper
    margin-left: 10px
    margin-right: 10px

.rt-game-banner__content
  min-height: 100%
  flex: 1
  position: relative
  display: flex
  flex-direction column

.rt-game-banner__item
  overflow: hidden;
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  padding-top: 9vh
  padding-bottom: 9vh
  opacity: 0
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity
  @media (max-width: mobile-upper-limit)
    padding-top: 168px
  @media (max-height: 800px) and (min-width: 1024px)
    padding-top: 100px
    padding-bottom: 100px


.rt-game-banner__item--is-active
  position: relative
  opacity: 1
  flex: 1

.rt-game-banner__icons
  display: flex
  align-items center
  padding-bottom: 34px
  position: relative
  @media (max-width: mobile-upper-limit)
    padding-bottom: 25px
    padding-left: 10px
    padding-right: 10px

.rt-game-banner__icons__item
