.{b2bAppName}-banner
  height calc((100vw - 140px)/4)
  max-height calc(1340px/4)
  width 100%
  border-radius 10px
  color b2c-white
  display flex
  flex-direction row
  overflow: hidden
  .rt-banner-content
    position relative
    top auto
    bottom auto
    height auto!important
  @media (max-width: tablet-step-size)
    flex-direction column
    height auto
    max-height none
  .rt-banner-image,
  .rt-banner-container
    width 50%
    position relative
    left auto
    @media (max-width: tablet-step-size)
      width 100%
      padding 20px
      display block
  .rt-banner-container
    clearfix()
    padding 40px
    @media (max-width: tablet-step-size)
      order 1
      padding 20px
      min-height auto
  .rt-banner-image
    background-size: contain
    background-position 50% 50%
    background-repeat: no-repeat
    @media (max-width: tablet-step-size)
      background-position-y 100%
      height calc((100vw - 20px)/2)
  .rt-banner-content__inner
    display flex
    padding 0
    box-sizing border-box
    flex-direction column
    justify-content space-between
    height calc(100% - 80px)
    @media (max-width: tablet-step-size)
      order 1
      min-height auto
      height auto
  &__title
    font-size 32px
    line-height 36px
    font-weight 400
    margin-bottom: 10px
  &__description
    font-size 18px
    line-height 24px
    font-weight 400
  &__text-content
    margin-bottom: 60px
