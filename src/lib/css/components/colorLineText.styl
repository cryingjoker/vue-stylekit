.color-line
  display inline
  word-break break-word
  position relative
  left 15px


  &-wrapper
    max-width calc(100vw - 70px)
    padding-bottom 37px
    padding-right 29px

  &--is-paragraph
    display flex
    flex-wrap wrap
    padding-right horizontal-space * .75
    position relative

    &:before,
    &:after
      content ""
      order 1
      width 100%

    @media (max-width: mobile-upper-limit)
      margin-right horizontal-space * 1.5

